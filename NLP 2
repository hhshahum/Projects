    "num_train = 12000\n",
    "UNK_symbol = \"<UNK>\"\n",
    "vocab = set([UNK_symbol])\n",
    "\n",
    "unique_word_type = {}\n",
    "train_trial = brown.paras()[:num_train]\n",
    "for para in train_trial:\n",
    "    for llist in para:\n",
    "        for word in llist:\n",
    "            word = word.lower()\n",
    "            if word in unique_word_type:\n",
    "                unique_word_type[word]+=1\n",
    "            else:\n",
    "                unique_word_type[word] = 1\n",
    "\n",
    "for freq in unique_word_type.keys():\n",
    "    check_freq(freq)\n",
    "\n",
    "print(len(vocab))"
   ]
