    "# final_gold_standard stores the word pairs and their human-annotated similarity in your final filtered test set\n",
    "final_gold_standard = {}\n",
    "word_primarysense = {} #a dictionary of (word, primary_sense) (used for next section); primary_sense is a synset\n",
    "\n",
    "for mm in filtered_gold_standard:\n",
    "    #Check for primary Sense\n",
    "    if(check_primary_sense(mm[0]) and check_primary_sense(mm[1])):\n",
    "        #Check if that primary sense is a noun or not\n",
    "        if(check_synset_noun(mm[0]) and check_synset_noun(mm[1])):\n",
    "            final_gold_standard[mm] = filtered_gold_standard[mm]  \n",
    "            word_primarysense[mm[0]] = tempdict[mm[0]]\n",
    "            word_primarysense[mm[1]] = tempdict[mm[1]]\n",
    "            \n",
    "print(len(final_gold_standard))\n",
    "print(final_gold_standard)"
