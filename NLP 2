   "source": [
    "import nltk\n",
    "from nltk.corpus import brown\n",
    "from nltk.corpus import wordnet\n",
    "\n",
    "nltk.download(\"brown\")\n",
    "nltk.download(\"wordnet\")\n",
    "\n",
    "# filtered_gold_standard stores the word pairs and their human-annotated similarity in your filtered test set\n",
    "filtered_gold_standard = {}\n",
    "\n",
    "# lemmatizer\n",
    "lemmatizer = nltk.stem.wordnet.WordNetLemmatizer()\n",
    "\n",
    "def lemmatize(word):\n",
    "    lemma = lemmatizer.lemmatize(word,'v')\n",
    "    if lemma == word:\n",
    "        lemma = lemmatizer.lemmatize(word,'n')\n",
    "    return lemma\n",
    "\n",
    "#Reading the file and storing in dictionary\n",
    "d={}\n",
    "with open('set1.tab') as f:\n",
    "    next(f)\n",
    "    f1 = f.readlines()\n",
    "    for i in f1:\n",
    "        f2 = i.split('\\t')\n",
    "        d[(f2[0],f2[1])] = f2[2]\n",
    "\n",
    "\n",
    "#Filtering the brown corpus and creating a list brown_corpus, where each element is a set of words\n",
    "brown_corpus=[]\n",
    "for para in brown.paras():\n",
    "    unique_words=set()\n",
    "    for i in para:\n",
    "        x = [w for w in i if w.isalpha()]\n",
    "        x = [word.lower() for word in x]\n",
    "        x = [lemmatize(word) for word in x]\n",
    "        for words in x:\n",
    "            unique_words.add(words)\n",
    "    brown_corpus.append(unique_words)\n",
    "\n",
    "#Generating document frequency for brown_corpus \n",
    "frequency={}\n",
    "for i in brown_corpus:\n",
    "    for j in i:\n",
    "        if j in frequency:\n",
    "            frequency[j]+=1\n",
    "        else:\n",
    "            frequency[j]=1\n",
    "\n",
    "#Filtered values for dataset with frequency greater than or equal to 8\n",
    "for i in list(d.keys()):\n",
    "    if(i[0] in frequency and i[1] in frequency):\n",
    "        if(frequency[i[0]]>=8 and frequency[i[1]]>=8):\n",
    "            filtered_gold_standard[i] = float(d[i])\n",
    "\n",
    "print(len(filtered_gold_standard))\n",
    "print(filtered_gold_standard)"
   ]
  },
