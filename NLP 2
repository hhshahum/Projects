  {
   "cell_type": "code",
   "execution_count": 24,
   "metadata": {},
   "outputs": [],
   "source": [
    "def get_word_mappings(dataset):\n",
    "    input_list = []\n",
    "    target = []\n",
    "    final_list=[]\n",
    "    for data in dataset:\n",
    "        final_data=[]\n",
    "        for sentence in data:\n",
    "            new_sentence=[]\n",
    "            for word in sentence:\n",
    "                word = word.lower()\n",
    "                if word in vocab_id:\n",
    "                    new_sentence.append(word)\n",
    "                else:\n",
    "                    word=\"<UNK>\"\n",
    "                    new_sentence.append(word)\n",
    "            final_data.append(new_sentence)\n",
    "        final_list.append(final_data)\n",
    "        \n",
    "    for para in final_list:\n",
    "        for sentence in para:\n",
    "            if (len(sentence)>=3):\n",
    "                for i in range(len(sentence)):\n",
    "                    if(i<len(sentence)-2):\n",
    "                        input_list.append([vocab_id[sentence[i]],vocab_id[sentence[i+1]]])\n",
    "                        target.append(vocab_id[sentence[i+2]])\n",
    "    return input_list,target"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": 25,
   "metadata": {},
   "outputs": [
    {
     "name": "stdout",
     "output_type": "stream",
     "text": [
      "(872823, 2)\n",
      "(872823, 1)\n",
      "(174016, 2)\n",
      "(174016, 1)\n"
     ]
    }
   ],
   "source": [
    "x_train,y_train = get_word_mappings(train)\n",
    "x_train = np.array(x_train)\n",
    "y_train = np.array(y_train)\n",
    "y_train = y_train.reshape(y_train.shape[0],1)\n",
    "\n",
    "x_dev,y_dev = get_word_mappings(dev)\n",
    "x_dev = np.array(x_dev)\n",
    "y_dev = np.array(y_dev)\n",
    "y_dev = y_dev.reshape(y_dev.shape[0],1)\n",
    "\n",
    "print(x_train.shape)\n",
    "print(y_train.shape)\n",
    "print(x_dev.shape)\n",
    "print(y_dev.shape)"
   ]
