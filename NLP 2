   "cell_type": "code",
   "execution_count": 23,
   "metadata": {},
   "outputs": [],
   "source": [
    "vocab_id = {}\n",
    "i = 0\n",
    "for word in vocab:\n",
    "    if word not in vocab_id:\n",
    "        vocab_id[word] = i\n",
    "        i+=1"
   ]
